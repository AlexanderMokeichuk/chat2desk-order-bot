{
  "name": "shoro-chat2desk-bot",
  "version": "0.1.0",
  "description": "Automated water delivery order bot for Shoro via Chat2Desk",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev:server": "bun --watch src/server.ts",
    "dev:worker": "bun --watch src/worker.ts",
    "build": "bun build src/server.ts --outdir=dist --target=bun && bun build src/worker.ts --outdir=dist --target=bun",
    "start:server": "bun dist/server.js",
    "start:worker": "bun dist/worker.js",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v"
  },
  "keywords": [
    "chatbot",
    "chat2desk",
    "automation"
  ],
  "author": "Alex",
  "license": "MIT",
  "dependencies": {
    "bull": "^4.16.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^5.0.5",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "bun-types": "^1.3.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2"
  }
}